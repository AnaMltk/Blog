	<main class="mb-4">
		<div class="container px-4 px-lg-5">
			<div class="row gx-4 gx-lg-5 justify-content-center">
				<div class="col-md-10 col-lg-8 col-xl-7">
					<h2>Créez votre compte</h2>
					<div class="my-5">

						<form action="" method="post" name="signup-form">
							<input type="hidden" name="token" value="{{ token }}"/>

							<div class="form-floating">

								<input class="form-control" id="pseudo" type="text" name="username" required/>
								<label for="pseudo">Pseudo</label>

							</div>
							<div class="form-floating">

								<input class="form-control" id="email" type="email" name="useremail" required/>
								<label for="email">Email address</label>

							</div>
							<div class="form-floating">
								<input class="form-control" id="phone" type="password" name="userpassword" required/>
								<label for="phone">Password</label>

							</div>

							<br/>


							<button type="submit" class="btn btn-success" name="register" value="register">Créer votre compte</button>

						</form>
						<br>
						{% for mes in message %}
							<div class='alert alert-danger'>
								{{mes}}
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</main>

