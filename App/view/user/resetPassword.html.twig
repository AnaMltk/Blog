{% extends 'base.html.twig' %}

{% block header %}
	<header class="masthead" style="background-image: url('/App/public/assets/img/background.jpg')">
		<div class="container position-relative px-4 px-lg-5">
			<div class="row gx-4 gx-lg-5 justify-content-center">
				<div class="col-md-10 col-lg-8 col-xl-7">
					<div class="site-heading">
						<h1>Reinitialisez votre mot de passe</h1>

					</div>
				</div>
			</div>
		</div>
	</header>
{% endblock %}
{% block body %}

	<main class="mb-4">
		<div class="container px-4 px-lg-5">
			<div class="row gx-4 gx-lg-5 justify-content-center">
				<div class="col-md-10 col-lg-8 col-xl-7">
					<h2>Reinitialisez votre mot de passe</h2>
					<div class="my-5">

						<form action="" method="post">
							<input type="hidden" name="token" value="{{ token }}"/>

							<div class="form-floating">

								<input class="form-control" id="email" type="email" name="useremail" required/>
								<label for="email">Votre email</label>

							</div>

							<br/>


							<button type="submit" class="btn btn-primary text-uppercase" name="submit" value="submit">Reinitialiser</button>

						</form>
						{% if message %}
							<div class='alert alert-danger'>
								{{ message }}
							</div>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</main>

{% endblock %}
