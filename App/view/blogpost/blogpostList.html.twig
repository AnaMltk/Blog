{% extends 'base.html.twig' %}

{% block header %} 
  <header class="masthead" style="background-image: url('/App/public/assets/img/test-bg.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>Tous les Articles</h1>
                           
                        </div>
                    </div>
                </div>
            </div>
        </header>
 {% endblock %}
{% block body %}
	
	<div class="container px-4 px-lg-5">
		<div class="row gx-4 gx-lg-5 justify-content-center">
			<div
				class="col-md-10 col-lg-8 col-xl-7">
				<!-- Post preview-->
				{% for blogpost in blogposts %}
					<div class="post-preview">
						<a href='/blogpost/getPost/{{ blogpost.post_id }}'>
							<h2 class="post-title">{{ blogpost.title }}</h2>
							<h3 class="post-subtitle">{{ blogpost.header }}</h3>
						</a>
						<p class="post-meta">
							Posted by
							<a href="#!">Anastasia Molotkova</a>
							on
							{{ blogpost.creation_date }}
						</p>
					</div>
					<hr class="my-4"/>
				{% endfor %}


				<!-- Pager-->
				<div class="d-flex justify-content-end mb-4">
					<a class="btn btn-primary text-uppercase" href="#!">Older Posts â†’</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
